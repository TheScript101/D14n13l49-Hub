-- Create GUI elements
local screenGui = Instance.new("ScreenGui", game.CoreGui)
local toggleButton = Instance.new("TextButton", screenGui)
local frame = Instance.new("Frame", screenGui)
local textBox = Instance.new("TextBox", frame)
local imageLabel = Instance.new("ImageLabel", frame)

-- Toggle button properties
toggleButton.Size = UDim2.new(0, 100, 0, 40)
toggleButton.Position = UDim2.new(0, 10, 0, 10)
toggleButton.Text = "Toggle Frame"
toggleButton.BackgroundColor3 = Color3.new(0.3, 0.3, 0.3)
toggleButton.TextColor3 = Color3.new(1, 1, 1)
toggleButton.BorderSizePixel = 2

-- Frame properties
frame.Size = UDim2.new(0, 300, 0, 200)
frame.Position = UDim2.new(0.5, -150, 0.5, -100)
frame.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
frame.BorderSizePixel = 2
frame.Visible = false -- Start hidden

-- TextBox properties
textBox.Size = UDim2.new(1, -20, 0, 30)
textBox.Position = UDim2.new(0, 10, 0, 10)
textBox.PlaceholderText = "Enter Image/Decal ID"
textBox.Text = ""
textBox.TextScaled = true
textBox.BackgroundColor3 = Color3.new(1, 1, 1)
textBox.TextColor3 = Color3.new(0, 0, 0)

-- ImageLabel properties
imageLabel.Size = UDim2.new(1, -20, 1, -50)
imageLabel.Position = UDim2.new(0, 10, 0, 50)
imageLabel.BackgroundColor3 = Color3.new(0.8, 0.8, 0.8)
imageLabel.Image = ""

-- Toggle button click event
local isFrameVisible = false
toggleButton.MouseButton1Click:Connect(function()
    isFrameVisible = not isFrameVisible
    frame.Visible = isFrameVisible
end)

-- Connect TextBox event to display image
textBox.FocusLost:Connect(function(enterPressed)
    if enterPressed then
        local imageId = tonumber(textBox.Text)
        if imageId then
            imageLabel.Image = "rbxassetid://" .. imageId
        else
            warn("Invalid image ID")
        end
    end
end)
